<footer class="flex justify-between border-t-2 pt-3 mt-4">
  <h3 class="text-md font-medium text-gray-400">This is a random message!</h3>
  <ul>
    {% for link in linklists.main-footer.links %}
    <li class="text-gray-400 font-medium my-2">
      {% assign child_list_handle = link.title | handleize %} {% if
      linklists[child_list_handle].links != blank %}
      <a href="{{ link.url }}">
        {{ link.title }}
      </a>
      [{% for childlink in linklists[child_list_handle].links %}
      <a href="{{ childlink.url }}">
        {{ childlink.title | escape }}
      </a>
      {% endfor %}] {% else %}
      <a href="{{ link.url }}">
        {{ link.title }}
      </a>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</footer>
