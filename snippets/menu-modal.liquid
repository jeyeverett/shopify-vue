<div class="h-full px-2 py-2 flex flex-col justify-between">
  <ul>
    {% for link in linklists.main-menu.links %} 
    <li class="font-medium my-2">
        {% assign child_list_handle = link.title | handleize %} 
          {% if linklists[child_list_handle].links != blank %}
            <a 
              href="{{ link.url }}" 
              class="pb-1 border-b-2 border-white hover:border-gray-700 transition-all">
                {{ link.title }}
            </a>
            [{% for childlink in linklists[child_list_handle].links %}
                <a 
                  href="{{ childlink.url }}" 
                  class="pb-1 border-b-2 border-white hover:border-gray-700 transition-all">
                    {{ childlink.title | escape }}
                </a>
            {% endfor %}] 
          {% else %}
            <a href="{{ link.url }}" class="pb-1 border-b-2 border-white hover:border-gray-700 transition-all">
                {{ link.title }}
            </a>
          {% endif %} 
    </li>
  {% endfor %} 
  </ul>

  <ul>
    {% for link in linklists.main-footer.links %} 
    <li class="text-gray-400 font-medium my-2">
        {% assign child_list_handle = link.title | handleize %} 
          {% if linklists[child_list_handle].links != blank %}
            <a 
              href="{{ link.url }}" 
              class="pb-1 border-b-2 border-white hover:border-gray-400 transition-all">
                {{ link.title }}
            </a>
            [{% for childlink in linklists[child_list_handle].links %}
                <a 
                  href="{{ childlink.url }}" 
                  class="pb-1 border-b-2 border-white hover:border-gray-400 transition-all">
                    {{ childlink.title | escape }}
                </a>
            {% endfor %}] 
          {% else %}
            <a href="{{ link.url }}" class="pb-1 border-b-2 border-white hover:border-gray-400 transition-all">
                {{ link.title }}
            </a>
          {% endif %} 
    </li>
  {% endfor %} 
  </ul>
</div>
