{% assign current_variant = product.selected_or_first_available_variant %} {%
assign featured_image = current_variant.featured_image | default:
product.featured_image %}

<div class="grid grid-cols-2 px-6">
  <div class="mx-auto">
    <img
      src="{{ featured_image | img_url: 'large' }}"
      alt="{{ featured_image.alt | escape }}"
      id="ProductPhotoImg"
      class="mb-2"
    />
    <div class="flex justify-around">
      {% for image in product.images %}
      <a href="{{ image.src | img_url: 'large' }}">
        <img
          src="{{ image.src | img_url: 'compact' }}"
          alt="{{ image.alt | escape }}"
          class="w-40"
        />
      </a>
      {% endfor %}
    </div>
  </div>

  <div class="flex flex-col justify-between">
    <h1 class="text-4xl font-semibold">{{ product.title }}</h1>

    <div>
      {{ product.description }}
      {% render 'add-to-cart-form' %}
    </div>
  </div>
</div>
